{
  "name"  : "todo",
  "dir"   : "www",
  "purge" : true,
  "nails" : [
    {
      "plugin" : "nail-js-edge",
      "tag"    : ["static", "js"],
      "babelify" : true,
      "debug":true,
      "source" : "./script/local-static.js"
    },
    {
      "plugin" : "nail-js-edge",
      "tag"    : ["async", "js"],
      "babelify" : true,
      "source" : "./script/network-async.js"
    },
    {
      "plugin" : "nail-js-edge",
      "tag"    : ["subscribable", "js"],
      "babelify" : true,
      "source" : "./script/network-subscribable.js"
    },
    {
      "plugin" : "nail-css-edge",
      "tag"    :  ["static", "async", "subscribable", "css"],
      "source" : "./style/todo.css"
    },
    {
      "plugin"     : "./nails/nail-static-react",
      "tag"        : ["static", "async", "subscribable", "html"],
      "source"       : {
        "name":"Loading",
        "todos":["...1","...2","...3"]},
      "data-source": "",
      "component"  : "./lib/component/page.js",
      "attach"     : [
        "./style.css",
        {
          "script" : "./script.js",
          "defer"  : true
        }],
      "embed"      : [],
      "attachbody" : [],
      "embedbody"  : []
    }
  ]
}
